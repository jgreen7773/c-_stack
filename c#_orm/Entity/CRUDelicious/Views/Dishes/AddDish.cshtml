@using CRUDelicious.Models;
@model Dishes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CRUDelicious!</title>
</head>
<body style="background-image:url ('124.jpg');margin:auto;width:970;height:auto;">
    <h2 style="text-align:center;">Add a new Dish!</h2>
    <a href="/">Home</a>
    <form asp-action="AddingDish" asp-controller="Dishes" method="POST">
        <div style="display:inline-block;width:299px;height:555px;text-align:center;vertical-align:top;">
            <span asp-validation-for="Chef"></span><br>
            <label asp-for="Chef">Chef's Name</label><br>
            <input type="input" asp-for="Chef" name="Chef" style="margin-bottom:15px;"><br>
            <span asp-validation-for="Name"></span><br>
            <label asp-for="Name">Dish Name</label><br>
            <input type="input" asp-for="Name" name="Name" style="margin-bottom:15px;"><br>
            <span asp-validation-for="Calories"></span><br>
            <label asp-for="Calories"># of Calories</label><br>
            <input type="input" asp-for="Calories" name="Calories" style="margin-bottom:15px;"><br>
        </div>
        <div style="display:inline-block;width:199px;height:555px;text-align:center;">
            <span asp-validation-for="Tastiness"></span><br>
            <label asp-for="Tastiness">Tastiness</label><br>
            <select asp-for="Tastiness" name="Tastiness"><br>
                <option></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select><br>
        </div>
        <div style="display:inline-block;width:399px;height:555px;">
            <span asp-validation-for="Description"></span><br>
            <label asp-for="Description">Description</label><br>
            <input type="textarea" asp-for="Description" name="Description" style="margin-bottom:15px;width:399px;height:299px;"><br>
            <input type="submit" value="Add Dish">
        </div>
    </form>
</body>
</html>